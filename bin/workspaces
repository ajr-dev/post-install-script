set-desktop-name 7 "Otros"
sleep 3
wmctrl -s 7 # estarás en este entorno de trabajo cuando el script termine de ejercutarse
sleep 1

$browser -new-tab -url https://calendar.google.com/ -new-tab -url https://mail.google.com/ &
