#!/bin/bash

command_exists() {
    command -v "$1" > /dev/null 2>&1
}

wmctrl -n 8
#set-desktop-name 0 "Programación de Sistemas y Concurrencia"
sleep 2
wmctrl -s 0
sleep 1
if command_exists nemo; then
    nemo "/home/user/facu/Programación de Sistemas y Concurrencia (PSC)" & # quizás un gestor de archivos también
fi
if command_exists gnome-terminal; then
    gnome-terminal --working-directory="/home/user/facu/Programación de Sistemas y Concurrencia (PSC)" --window --full-screen &
fi
if command_exists firefox; then
    firefox -new-tab -url "https://informatica.cv.uma.es/course/view.php?id=3177" -new-tab -url "https://informatica.cv.uma.es/course/view.php?id=3133&section=4" &
fi
if command_exists zenity; then
    zenity --question --text "Open workspaces"
else
    sudo apt-get install -y zenity
    zenity --question --text "Open workspaces"
fi
if [[ $? == 1 ]]; then exit; fi
wmctrl -s 1
sleep 1
#set-desktop-name 1 "Programación Orientada a Objetos"

if command_exists firefox; then
    firefox -new-tab -url "https://informatica.cv.uma.es/course/view.php?id=3072" -new-tab -url "http://www.lcc.uma.es/~vicente/docencia/poo/teoria/planificacion_poo.pdf"&
fi
if command_exists nemo; then
    nemo "/home/user/facu/Programación Orientada a Objetos (POO)" &
fi
if command_exists gnome-terminal; then
    gnome-terminal --working-directory="/home/user/facu/Programación Orientada a Objetos (POO)" --window --full-screen &
fi
sleep 3
wmctrl -s 2
sleep 1
#set-desktop-name 2 "Sistemas Operativos"
if command_exists firefox; then
    firefox --new-window https://informatica.cv.uma.es/course/view.php?id=3112 &
fi
if command_exists nemo; then
    nemo "/home/user/facu/Sistemas Operativos (SO)/Temario/Tema 2" &
fi
if command_exists gnome-terminal; then
    gnome-terminal --working-directory="/home/user/facu/Sistemas Operativos (SO)/Temario/Tema 2" --window --full-screen &
fi
sleep 3
wmctrl -s 3
sleep 1
#set-desktop-name 3 "Tecnología de Computadores"
if command_exists firefox; then
    firefox -new-tab -url https://guac.ac.uma.es/guac/mod/tecncomp/view.php?id=3829 -new-tab -url https://informatica.cv.uma.es/mod/page/view.php?id=225525 &
fi
if command_exists nemo; then
    nemo "/home/user/dotnet/ARMSim-201/practica/Ejercicios" &
fi
if command_exists gnome-terminal; then
    gnome-terminal --working-directory="/home/user/dotnet/ARMSim-201/practica/Ejercicios" --window --full-screen &
fi
sleep 3
wmctrl -s 4
sleep 1
#set-desktop-name 4 "Redes y Sistemas Distribuidos"
if command_exists firefox; then
    firefox -new-tab -url https://informatica.cv.uma.es/course/view.php?id=2938 -new-tab -url "https://informatica.cv.uma.es/mod/page/view.php?id=211189"&
fi
if command_exists nemo; then
    nemo "/home/user/facu/Redes y Sistemas Distribuidos (RSD)" &
fi
if command_exists gnome-terminal; then
    gnome-terminal --working-directory="/home/user/facu/Redes y Sistemas Distribuidos (RSD)" --window --full-screen &
fi
sleep 3
wmctrl -s 5
sleep 1
#set-desktop-name 5 "Introducción a la Ingeniería del Software"
if command_exists firefox; then
    firefox -new-tab -url https://informatica.cv.uma.es/course/view.php?id=3173 -new-tab -url "https://informatica.cv.uma.es/pluginfile.php/254988/mod_resource/content/1/Planificaci%C3%B3n%202017%20AMG-GradoIngSW.pdf" &
fi
if command_exists nemo; then
    nemo "/home/user/facu/Introducción a la Ingeniería del Software (IIS)" &
fi
if command_exists gnome-terminal; then
    gnome-terminal --working-directory="/home/user/facu/Introducción a la Ingeniería del Software (IIS)" --window --full-screen &
fi
sleep 3
wmctrl -s 6
sleep 1
#set-desktop-name 6 "Programación"
if command_exists okular; then
    okular "/home/user/practice/c/Programming in C by Kochan.pdf" &
fi
if command_exists firefox; then
    firefox --new-window https://www.google.com &
fi
if command_exists gnome-terminal; then
    gnome-terminal --working-directory="/home/user/practice" --window --full-screen &
fi
sleep 3
wmctrl -s 7 # estarás en este entorno de trabajo cuando el script termine de ejercutarse
sleep 1
#set-desktop-name 7 "Otros"
if command_exists firefox; then
    firefox -new-tab -url https://calendar.google.com/ -new-tab -url https://mail.google.com/ &
fi
if command_exists; then
    #ebook-viewer "/home/user/Documents/Books/Robb Wolf/Wired to Eat/Wired to Eat - How to Rewire Your Appetite and Lose Weight for Good (2017).epub" --open-at=247.5 &
    ebook-viewer --continue
fi
