#!/bin/bash

#################################################################
# CHECKING FOR ROOT
#################################################################
if [ `echo -n $USER` != "root" ]
then
    echo "ERROR: Please run as root!"
    exit 1
fi

#################################################################
# CHECKING TO SEE IF INTERFACE IS PROVIDED
#################################################################
if [ -z ${1} ]
then
    echo "Usage: ${0} interface"
    echo "Example #`basename ${0}` wlan0 (everything else is optional)"
    exit 1
fi

ifconfig $1 down
macchanger -r $1
iwconfig $1 mode monitor
ifconfig $1 up
airmon-ng check kill
